#!/bin/env bash

set -e

echo -n "ssh "

[ -z $LB_SSH_PORT ] || echo -n "-p $LB_SSH_PORT "
[ -z $LB_SSH_KEY ] || echo -n "-o IdentityFile=$LB_SSH_KEY "

echo -n "$LB_SSH_USERHOST "

[ -z $LB_SSH_ARGS ] || echo -n "$LB_SSH_ARGS "

[ $LB_SSH_SUDO ] && {
    [ -z $LB_SSH_SUDO_PASS ] || {
        echo -n "echo \"$LB_SSH_SUDO_PASS\" | "
    }
    echo -n "sudo --prompt='' -S -- bash -s "
}

exit 0
